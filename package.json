{
  "name": "finecode-vscode",
  "displayName": "FineCode",
  "description": "",
  "engines": {
    "vscode": "^1.90.0"
  },
  "version": "1.0.2",
  "preview": true,
  "serverInfo": {
    "name": "FineCode",
    "module": "finecode"
  },
  "publisher": "aksem",
  "license": "MIT",
  "homepage": "https://github.com/Aksem/FineCode-VSCode",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aksem/FineCode-VSCode.git"
  },
  "bugs": {
    "url": "https://github.com/Aksem/FineCode-VSCode/issues"
  },
  "galleryBanner": {
    "color": "#1e415e",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:*.py"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "finecode.showNotifications": {
          "default": "off",
          "description": "Controls when notifications are shown by this extension.",
          "enum": [
            "off",
            "onError",
            "onWarning",
            "always"
          ],
          "enumDescriptions": [
            "All notifications are turned off, any errors or warning are still available in the logs.",
            "Notifications are shown only in the case of an error.",
            "Notifications are shown for errors and warnings.",
            "Notifications are show for anything that the server chooses to show."
          ],
          "scope": "machine",
          "type": "string"
        }
      }
    },
    "commands": [
      {
        "command": "finecode.refreshActions",
        "title": "Refresh",
        "icon": {
          "light": "dist/assets/icons/light/refresh.svg",
          "dark": "dist/assets/icons/dark/refresh.svg"
        }
      },
      {
        "command": "finecode.refreshViews",
        "title": "Refresh",
        "icon": {
          "light": "dist/assets/icons/light/refresh.svg",
          "dark": "dist/assets/icons/dark/refresh.svg"
        }
      },
      {
        "command": "finecode.runActionOnProject",
        "title": "Run on project",
        "icon": {
          "light": "dist/assets/icons/light/run-all.svg",
          "dark": "dist/assets/icons/dark/run-all.svg"
        }
      },
      {
        "command": "finecode.runActionOnFile",
        "title": "Run on current file",
        "icon": {
          "light": "dist/assets/icons/light/run.svg",
          "dark": "dist/assets/icons/dark/run.svg"
        }
      },
      {
        "command": "finecode.restartWorkspaceManager",
        "title": "Restart Workspace Manager",
        "category": "FineCode"
      },
      {
        "command": "finecode.restartExtensionRunner",
        "title": "Restart Extension Runner",
        "icon": {
          "light": "dist/assets/icons/light/refresh.svg",
          "dark": "dist/assets/icons/dark/refresh.svg"
        }
      },
      {
        "command": "finecode.reloadAction",
        "title": "Reload action",
        "icon": {
          "light": "dist/assets/icons/light/refresh.svg",
          "dark": "dist/assets/icons/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fine-code",
          "title": "Fine Code",
          "icon": "dist/assets/activity_icon.svg"
        }
      ]
    },
    "views": {
      "fine-code": [
        {
          "id": "fineCodeActions",
          "name": "Actions",
          "icon": "dist/assets/activity_icon.svg",
          "contextualTitle": "Fine Code Actions"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "finecode.refreshActions",
          "when": "view == fineCodeActions",
          "group": "navigation"
        },
        {
          "command": "finecode.refreshViews",
          "when": "view == fineCodeViews",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "finecode.reloadAction",
          "when": "view == fineCodeActions && viewItem == action",
          "group": "inline"
        },
        {
          "command": "finecode.runActionOnProject",
          "when": "view == fineCodeActions && viewItem == action",
          "group": "inline"
        },
        {
          "command": "finecode.runActionOnFile",
          "when": "view == fineCodeActions && viewItem == action",
          "group": "inline@2"
        },
        {
          "command": "finecode.restartExtensionRunner",
          "when": "view == fineCodeActions && viewItem == project",
          "group": "inline"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "finecode",
        "properties": {
          "task": {
            "type": "string",
            "description": "The FineCode task"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc-client": "tsc --noEmit --watch --project ./tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit -p .",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vsce-package": "vsce package -o finecode.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.21.4",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
